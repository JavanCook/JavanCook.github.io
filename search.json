---
---
[
    {% for post in site.posts %}
       {
         "title"    : "{{ post.title | escape }}",
         "description" : "{{ post.description }}",
         "category" : "{{ post.category }}.replace(' ', '-')",
         "tags"     : [{% for tag in post.tags %}"{{ tag }}",{% endfor %} null],
         "url"     : "{{ post.url }}",
         "date"     : "{{ post.date }}"
       } {% if forloop.last %}{% else %},{% endif %}
   {% endfor %}
]
